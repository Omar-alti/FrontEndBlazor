@inherits LayoutComponentBase

<div class="@(navigationManager.ToBaseRelativePath(navigationManager.Uri) == "courses" ? "wrapper" : navigationManager.ToBaseRelativePath(navigationManager.Uri) == "coursesdetails" ? "wrapper" : "auth-wrap")">

    <Header />

    @* this conditional statement renders breadcrumbs only if not on first page ("") *@
    @if (navigationManager.ToBaseRelativePath(navigationManager.Uri) == "courses")
    {
        <Breadcrumbs />
    }
    <main>
        @Body
    </main>
        
    <Footer />

    <script defer src="/js/coursesFilter.js"></script>

</div>

