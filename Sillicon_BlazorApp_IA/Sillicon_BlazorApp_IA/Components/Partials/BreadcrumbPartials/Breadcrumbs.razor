
<section class="container">
    <nav class="breadcrumb" style="--bs-breadcrumb-divider: '@BreadcrumbDivider';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <i class="fa-light fa-house"></i>
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            @if (navigationManager.ToBaseRelativePath(navigationManager.Uri) != "")
            {
                <li class="@(navigationManager.ToBaseRelativePath(navigationManager.Uri).EndsWith("Details")! ? "breadcrumb-item" : "breadcrumb-item active")">
                    <a href="/navigationManager.ToBaseRelativePath(navigationManager.Uri)">
                        @navigationManager.ToBaseRelativePath(navigationManager.Uri)
                    </a>
                </li>
            }
            @* If there a subpage that ends with Details is active then this code prints that out in the breadcrumb. *@
            @if (navigationManager.ToBaseRelativePath(navigationManager.Uri).EndsWith("Details")!)
            {
                <li class="breadcrumb-item active" aria-current="page">@navigationManager.ToBaseRelativePath(navigationManager.Uri)</li>
            }
        </ol>
    </nav>
</section>

@code {
    private string BreadcrumbDivider { get; set; } = ">";

}
